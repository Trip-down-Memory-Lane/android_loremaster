<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:top="2dp">
        <shape>
            <corners
                android:radius="5dp"/>
            <gradient
                android:startColor="#000000"
                android:endColor="@color/ui_element_shadow"
                android:gradientRadius="10dp" />
        </shape>
    </item>
    <item android:right="1dp" android:bottom="1dp">
        <shape>
            <corners
                android:radius="5dp" />
            <gradient
                android:startColor="#5b166d"
                android:endColor="#ab5bbe"
                android:angle="135"
                android:type="linear"/>

        </shape>
    </item>
</layer-list>
