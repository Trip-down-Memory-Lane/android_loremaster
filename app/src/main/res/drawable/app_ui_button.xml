<?xml version="1.0" encoding="UTF-8"?>
<layer-list
xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <corners
            android:radius="15dp" />
        <solid android:color="@color/ui_element_shadow" />
    </shape>
</item>
<item android:right="3dp" android:bottom="3dp">
    <shape>
        <corners
            android:radius="15dp" />
        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="1dp"/>
        <solid android:color="@color/ui_btn_background"/>
        <stroke
            android:width="2dp"
            android:color="@color/ui_btn_border" />
    </shape>
</item>
</layer-list>
